{
    "name": "Yellow CMS",
    "id": "yellowcms",
    "packaging_format": 1,
    "description": {
        "en": "CMS for simple website",
        "fr": "CMS pour un site simple"
    },
    "url": "https://datenstrom.se/yellow/",
    "license": "GPL-2.0-only",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com",
        "url": "http://example.com"
    },
    "requirements": {
        "yunohost": ">> 3.8.1"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.0-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Yellow CMS",
                    "fr": "Choisissez un nom de domaine pour Yellow CMS"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Yellow CMS",
                    "fr": "Choisissez un chemin pour Yellow CMS"
                },
                "example": "/example",
                "default": "/example"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}
